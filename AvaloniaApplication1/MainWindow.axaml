<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:avaloniaapp="clr-namespace:AvaloniaApplication1"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="AvaloniaApplication1"
		PointerPressed="Window_PointerPressed"
		PointerMoved="Window_PointerMoved"
		PointerReleased="Window_PointerReleased">
		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="Type">
					<MenuItem Header="ByDef" Click="MenuClicked"/>
					<Separator/>
					<MenuItem Header="Jarvis" Click="MenuClicked"/>
				</MenuItem>
				<MenuItem Header="Shape">
					<MenuItem Header="Triangle" Click="MenuClicked"/>
					<Separator/>
					<MenuItem Header="Circle" Click="MenuClicked"/>
					<Separator/>
					<MenuItem Header="Square" Click="MenuClicked"/>
				</MenuItem>
				<MenuItem Header="Settings">
					<MenuItem Header="Radius" Click="MenuClicked"/>
					<Separator/>
					<MenuItem Header="Color" Click="MenuClicked"/>
				</MenuItem>
			</Menu>
			<avaloniaapp:CustomControl Name="myCC"/>
		</DockPanel>
</Window>